{
  "compilerOptions": {

    "target": "esnext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "bundle",
    "src/__test__",
    "src/compiled"
  ]
}