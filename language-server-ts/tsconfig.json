	"declaration": true,
	"moduleResolution": "node",
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true
	},
	"include": [
		"src"
	],
	"types": [
		"node"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "./client" },
		{ "path": "./server" }
	]
