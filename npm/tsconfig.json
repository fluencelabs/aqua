{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "bundle",
    "src/__test__"
  ],
  "include": ["src/**/*", "compiled/**/*"]
}